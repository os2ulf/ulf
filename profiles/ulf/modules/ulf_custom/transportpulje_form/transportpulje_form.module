function _tpf_transport_application_sent() {
  return variable_get('confirmation', array('value' => '', 'format' => NULL))['value'];
}

/**
 * Provide html for confirmation page.
 *
 * @param string $output
 *   The output to be displayed in a page.
 *
 * @return mixed
